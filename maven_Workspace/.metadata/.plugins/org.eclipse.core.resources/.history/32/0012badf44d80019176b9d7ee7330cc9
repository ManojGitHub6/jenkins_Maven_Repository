package java_Concepts;

public class Patterns {

	public static void main(String[] args) {
	
	//To print * pattern	
    for(int i=1;i<=4;i++) {
    	
    	for(int j=1;j<=i;j++) {
    		
    		System.out.print("*");
    	}
    	System.out.println();
		
	}
    
    System.out.println("\n\n");
    
    // To print 1,22,333 format
    for(int i=1;i<=4;i++) {
    	for (int j=1;j<=i;j++) {
    		System.out.print(i);
    	}
    	System.out.println();
    }
    
    //To print 1,12,123,1234 format
    for(int i=1;i<=4;i++) {
    	for (int j=1;j<=i;j++) {
    		System.out.print(j);
    	}
    	System.out.println();
    }
    
  }
}
